generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Size {
  XS
  S
  M
  L
  XL
  XXL
  XXXL
  XXXXL
}

enum Gender {
  women
  men
  kid
  unisex
}

model Category {
  id      String    @id @default(uuid())
  name    String    @unique
  Product Product[]
}

model SizeQuantity {
  id        String  @id @default(uuid())
  product   Product @relation(fields: [productId], references: [id])
  productId String
  size      Size
  quantity  Int

  @@index([productId])
}

model Product {
  id          String         @id @default(uuid())
  description String
  gender      Gender
  price       Float          @default(0)
  sizes       SizeQuantity[]
  slug        String         @unique
  tags        String[]       @default([])
  title       String         @unique

  category     Category       @relation(fields: [categoryId], references: [id])
  categoryId   String
  ProductImage ProductImage[]

  @@index([gender])
}

model ProductImage {
  id  String @id @default(uuid())
  url String @unique

  product   Product @relation(fields: [productId], references: [id])
  productId String

  @@index([url])
}
